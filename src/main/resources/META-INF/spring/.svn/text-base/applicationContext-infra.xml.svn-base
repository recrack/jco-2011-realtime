    <jdbc:embedded-database id="prototypeDataSource" type="HSQL">
        <jdbc:script location="classpath:sqlScript/schema.sql" />
        <jdbc:script location="classpath:sqlScript/USERS_DATA.sql" />
        <jdbc:script location="classpath:sqlScript/EST_KOR_BOOK_DATA.sql" />
        <jdbc:script location="classpath:sqlScript/EST_ENG_BOOK_DATA.sql" />
    </jdbc:embedded-database>

    <bean id="prototypeTransactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
          p:dataSource-ref="prototypeDataSource" />
          
    <tx:annotation-driven transaction-manager="prototypeTransactionManager" />
          
    <bean id="prototypeSqlMapClient"
          class="org.springframework.orm.ibatis.SqlMapClientFactoryBean"
          p:dataSource-ref="prototypeDataSource"
          p:configLocation="classpath:META-INF/ibatis/SqlmapConfig.xml"
          p:mappingLocations="classpath:com/kyobobook/mobile/domain/Sqlmap*.xml" />
    
    <sqlmap:repositories sqlmap-executor-ref="prototypeSqlMapClient"
                         base-package="com.kyobobook.mobile.service" />        
     
</beans>